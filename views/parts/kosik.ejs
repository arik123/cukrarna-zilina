
<%
if(typeof kosik != "undefined"){
    var cenaSpolu = 0;
    kosik.forEach((item)=>{
       cenaSpolu += kolace.find((kolac)=>{return kolac.meno == item.name}).cena * item.pocet;
%>
    <div class="kolacVKosiku">
        <img src="<%-kolace.find((kolac)=>{return kolac.meno == item.name}).obrazok%>" alt="obrazok" width="64px" height="36px">
        <h3><%-kolace.find((kolac)=>{return kolac.meno == item.name}).meno%> (<%-kolace.find((kolac)=>{return kolac.meno == item.name}).vaha%> g)</h3> 
        <%-item.pocet%> x <%-kolace.find((kolac)=>{return kolac.meno == item.name}).cena%> € == <%-(kolace.find((kolac)=>{return kolac.meno == item.name}).cena * item.pocet).toFixed(2)%>€
        odober: <input type="number" name="pocetOdober" value=""> 
        <div class="remFromCart" data-id="<%-item.id%>" onclick="javascript:(this.parentElement.children[2].value!='') ? rem(this.parentElement.children[2].value, this.dataset.id) : alert('zadaj pocet')">odober</div>
    </div>
<%
});
%>
    <div id="kosikSpolu">
        Spolu: <%-cenaSpolu.toFixed(2)%> €
        <div id="objednaj" onclick="objednaj()">
            objednaj
        </div>
    </div>
<%
}
%>